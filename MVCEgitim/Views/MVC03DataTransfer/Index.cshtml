
@{
    ViewBag.Title = "MVC de Veri Transferi";
}

<h2>MVC de View ve Controller Arasında Veri Transferi</h2>

<h3>Controller dan View a Veri Gönderme</h3>

<table class="table">
    <tr>
        <td>Ürün Kategorisi</td>
        <td>@ViewBag.UrunKategorisi</td>
    </tr>
    <tr>
        <td>Ürün Adı</td>
        <td>@ViewData["UrunAdi"]</td>
    </tr>
    <tr>
        <td>Ürün Fiyatı</td>
        <td>@TempData["UrunFiyati"] ₺</td>
    </tr>
    <tr>
        <td>Ürün Fiyatı - string.Format</td>
        <td>@(string.Format("{0:C}", TempData["UrunFiyati"]))</td>
    </tr>
</table>

<hr />

<h3>MVC de View dan Controller a Veri Gönderme</h3>

<h3>1-GET Metoduyla Veri Gönderme</h3>

<form action="/MVC03DataTransfer" method="get">
    <input type="text" name="kelime" value="" />
    <input type="text" name="fiyat" value="" />
    <input type="submit" value="Ara" />
</form>

Aranan kelime :
<b>@ViewBag.Kelime</b>
Fiyat:
<b>@ViewBag.Fiyat</b>

<hr />

<h3>1-POST Metoduyla Veri Gönderme</h3>

@{
    SelectListItem[] liste = new SelectListItem[]{
        new SelectListItem() { Text = "Bilgisayar" },
        new SelectListItem() { Text = "Elektronik" },
        new SelectListItem() { Text = "Telefon" }
    };
}

<form action="/MVC03DataTransfer" method="post">
    @Html.TextBox("text1")
    <hr />
    @Html.DropDownList("ddlListe", liste)
    <hr />
    @Html.CheckBox("cbOnay")
    <label>Onaylıyorum</label>
    <hr />
    <input type="submit" value="Gönder" />
</form>

